{
  "name": "InstaLetter",
  "version": "0.1",
  "manifest_version": 3,
  "description": "Generate Tailored a Tailored Cover Letter in Seconds",
  "background": {
    "service_worker": "background.js"
  },
  "permissions": [
        "sidePanel",
        "storage",
        "activeTab",
        "scripting",
        "tabs",
        "clipboardWrite"
  ],
  "side_panel": {
    "default_path": "sidepanel/index.html"
  },
  "content_scripts": [
    {
      "all_frames": true,
      "matches": [
        "<all_urls>"
      ],
      "js": ["content.js"]
    }
  ],
  "action": {
    "default_icon": {
      "16": "images/icon16.png",
      "32": "images/icon32.png",
      "48": "images/icon48.png",
      "128": "images/icon128.png"
    },
    "default_title": "Open Chat Interface"
  }
}
